  <!-- English -->
  <Language id="English" DefaultFont="FiraSansExtraCondensed-Regular">
    <Map From="FiraSansExtraCondensed-Regular" To="FiraSansExtraCondensed-Regular"/>
  </Language>

  <!-- Chinese -->
  <Language id="中文" DefaultFont="simkai">
    <Map From="FiraSansExtraCondensed-Regular" To="FiraSansExtraCondensed-Regular"/>
  </Language>

  <!-- Japanese -->
  <Language id="日本語" DefaultFont="FiraSansExtraCondensed-Regular"/>

  <!-- Korean -->
  <Language id="한국어" DefaultFont="FiraSansExtraCondensed-Regular"/>

  <!-- French -->
  <Language id="Français" DefaultFont="FiraSansExtraCondensed-Regular"/>

  <!-- Brazilian Portuguese -->
  <Language id="Português Brasileiro" DefaultFont="FiraSansExtraCondensed-Regular">
  <Map From="FiraSansExtraCondensed-Regular" To="FiraSansExtraCondensed-Regular"/>
  </Language>
